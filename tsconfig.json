{
  "compilerOptions": {
    "baseUrl": ".",
    // "paths": {
    //   "@/*": ["src/*"]
    // },
    "target": "esnext",
    "module": "commonjs",
    "lib": ["es6", "dom", "esnext"],
    "outDir": "dist/types",
    "sourceMap": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    // "rootDir": ".",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types", "types"]
  },
  "include": ["src/**/*", "lib/*", "types/**/*"],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts",
    "*.js"
  ]
}
